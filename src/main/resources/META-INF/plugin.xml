<idea-plugin>
    <id>com.github.ysnows.intellijplatformplugintemplate</id>
    <name>-intellij-platform-plugin-template</name>
    <vendor>ysnows</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.ysnows.intellijplatformplugintemplate.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.ysnows.intellijplatformplugintemplate.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.ysnows.intellijplatformplugintemplate.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
